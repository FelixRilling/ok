{
    "name": "okjs",
    "version": "2.1.1",
    "description": "Ok is an extremely small form validation library",
    "author": "Felix Rilling",
    "license": "MIT",
    "keywords": [
        "validation",
        "form"
    ],
    "constants": {
        "dirBase": {
            "input": "./src",
            "output": "./dist"
        },
        "js": {
            "input": "main",
            "namespace": {
                "module": "ok",
                "file": "ok"
            },
            "targets": {
                "browsers": [
                    "Chrome >= 60"
                ]
            }
        }
    },
    "scripts": {
        "start": "npm-run-all lint build test",
        "build": "node tasks/jsDev.js",
        "dist": "node tasks/jsDist.js",
        "lint": "eslint src/",
        "test": "jasmine"
    },
    "bugs": {
        "url": "https://github.com/FelixRilling/okjs/issues"
    },
    "homepage": "https://github.com/FelixRilling/okjs#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/okjs.git"
    },
    "dependencies": {
        "lightdash": "^3.3.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-env": "^1.6.1",
        "eslint": "^4.13.0",
        "jasmine": "^2.8.0",
        "npm-run-all": "^4.1.2",
        "rollup": "^0.52.1",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-uglify-es": "0.0.1",
        "uglify-es": "^3.2.1"
    }
}
