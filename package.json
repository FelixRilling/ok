{
	"name": "okjs",
	"version": "4.1.0",
	"description": "A super tiny TypeScript library for form validation",
	"type": "module",
	"main": "./dist/cjs/main.js",
	"module": "./dist/esm/main.js",
	"types": "./dist/esm/main.d.ts",
	"directories": {
		"lib": "src/",
		"test": "spec/",
		"doc": "docs/"
	},
	"scripts": {
		"start": "npm run dist",
		"dist": "npm run lint && npm run clean && npm run build && npm run test && npm run docs",
		"clean": "rm -rf ./dist ./docs",
		"build": "tsc --build ./tsconfig.json",
		"watch": "tsc --build ./tsconfig.json -w",
		"lint": "eslint ./src/ ./spec/ --ext .ts",
		"fix": "eslint ./src/ ./spec/ --ext .ts --fix",
		"test": "ts-node --project ./spec/tsconfig.json node_modules/jasmine/bin/jasmine --config=./jasmine.json",
		"docs": "typedoc"
	},
	"bugs": {
		"url": "https://github.com/FelixRilling/okjs/issues"
	},
	"homepage": "https://github.com/FelixRilling/okjs#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FelixRilling/okjs.git"
	},
	"author": "Felix Rilling",
	"license": "MIT",
	"keywords": [
		"validation",
		"form"
	],
	"dependencies": {},
	"devDependencies": {
		"@types/jasmine": "^4.0.3",
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"eslint": "^8.13.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jasmine": "^4.0.2",
		"prettier": "^3.0.2",
		"ts-node": "^10.0.0",
		"typedoc": "^0.25.3",
		"typescript": "~5.3.2"
	}
}
